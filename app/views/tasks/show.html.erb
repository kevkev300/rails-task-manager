<h2>
  <%= @task[:title] %>
</h2>

<div class="task-decription">
  <p>
    <%= @task[:details] %>
  </p>
</div>

<div class="task-checked">
  <% if @task[:completed] %>
    <input type="checkbox" name="completed" checked> This task is completed!
  <% else %>
    <input type="checkbox" name="completed"> This task ist not completed yet!
  <% end %>
</div>

<%= link_to "Back to list", tasks_path %>
</br>
<%= link_to "Update", edit_task_path(@task) %>
